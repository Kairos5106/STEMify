<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFE5EC"
    tools:context=".MentalHealth">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/TBMentalHealth"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FB6B92"
        android:elevation="4dp"
        android:title="Health Guidance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NeuroScience of Mental Health"
        android:textColor="#66001B"
        android:textSize="27dp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:paddingTop="12dp"
        android:id="@+id/textView3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            android:background="@color/white"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:text="@string/mental_main" />

            <ImageView
                android:id="@+id/hugs"
                android:layout_width="121dp"
                android:layout_height="114dp"
                android:layout_gravity="center"
                android:src="@drawable/hug" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:layout_gravity="center"
                android:text="Neuroplasticity"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/textView16" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/mental_1"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/neuro1"
                android:layout_width="164dp"
                android:layout_height="151dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/neuro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Neurotransmitters"
                android:id="@+id/textView12b" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/mental_2" />

            <ImageView
                android:id="@+id/sad_emoticon"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/mood" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stress Response"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:paddingTop="22dp"
                android:id="@+id/textView9" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/mental_3" />

            <ImageView
                android:id="@+id/having_fun"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/stress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mind-Body Connection"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginTop="25dp"
                android:id="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/mental_4" />

            <ImageView
                android:id="@+id/mind_body"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:src="@drawable/mindbody" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Click Here to find out more"
                android:id="@+id/textviewClick" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>