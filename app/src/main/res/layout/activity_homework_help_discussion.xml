<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".HomeworkHelp_Discussion">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Your existing TextView -->

        <TextView
            android:id="@+id/TVQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="37dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus a nisi faucibus, luctus purus non, condimentum tortor. Proin in interdum libero, vitae elementum odio. Duis sodales porttitor blandit."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVTag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="18dp"
            android:background="#28CC9E"
            android:text="Tag1"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVQuestion" />

        <TextView
            android:id="@+id/TVTag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:background="#28CC9E"
            android:text="Tag2"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/TVTag1"
            app:layout_constraintTop_toBottomOf="@+id/TVQuestion" />

        <TextView
            android:id="@+id/TVTag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:background="#28CC9E"
            android:text="Tag3"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/TVTag2"
            app:layout_constraintTop_toBottomOf="@+id/TVQuestion" />

        <TextView
            android:id="@+id/TVDescription"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="37dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus a nisi faucibus, luctus purus non, condimentum tortor. Proin in interdum libero, vitae elementum odio. Duis sodales porttitor blandit. Mauris quis ullamcorper tortor, id tincidunt nibh. Sed sed massa quis est gravida vehicula vitae ut dui. Aenean venenatis sed quam eget accumsan. Pellentesque commodo elementum lacus at consectetur. Morbi eget mollis urna. Quisque quis commodo magna, non sodales dolor.  Vivamus scelerisque, dui nec iaculis auctor, metus turpis imperdiet nibh, vitae finibus augue eros ut tortor. Nulla in lectus auctor, ultricies nibh sit amet, lobortis ligula. In vitae enim at mi venenatis interdum. Vestibulum at diam felis. Pellentesque pellentesque eleifend ornare. Nam ornare pulvinar massa, sit amet faucibus neque. Mauris porttitor finibus augue. Pellentesque nec nunc tellus. Maecenas porta dolor et urna eleifend, eget congue nisi laoreet. Proin maximus, nunc eu facilisis ornare, elit velit fringilla ipsum, eget blandit lectus est eget libero. Suspendisse a auctor eros. Cras sed ex ullamcorper, viverra orci nec, placerat nunc."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVTag1" />

        <ImageView
            android:id="@+id/IVProfilePicPoster"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="294dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="37dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVDescription"
            app:srcCompat="@drawable/pfp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="31dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IVProfilePicPoster" />

        <TextView
            android:id="@+id/TVUsernamePoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="19dp"
            android:text="Username"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/IVProfilePicPoster"
            app:layout_constraintTop_toBottomOf="@+id/TVDescription" />

        <TextView
            android:id="@+id/TVTimePoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="19dp"
            android:text="Time"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/IVProfilePicPoster"
            app:layout_constraintTop_toBottomOf="@+id/TVUsernamePoster" />

        <ImageView
            android:id="@+id/IVProfilePicYou"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="319dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:srcCompat="@drawable/pfp" />

        <EditText
            android:id="@+id/ETAddComment"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="138dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="Add a comment"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/IVProfilePicYou"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RVComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IVProfilePicYou" />

        <Button
            android:id="@+id/BtnSendComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="37dp"
            android:text="Send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ETAddComment"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <!-- Add other views/components within the ConstraintLayout as needed -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
