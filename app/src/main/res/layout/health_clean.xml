<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFE5EC"
    tools:context=".Cleanliness">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keeping It Clean! "
        android:textColor="#66001B"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:paddingTop="12dp"
        android:id="@+id/textView3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            android:background="@color/white"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/clean_main"
                android:id="@+id/textView15" />

            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:layout_gravity="center"
                android:text="Wash Your Hands Using the 7 Steps"
                android:id="@+id/textView16" />

            <ImageView
                android:id="@+id/clean_main"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:src="@drawable/clean_main" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/clean_wash"
                android:textAlignment="textStart"
                android:id="@+id/textView17" />

            <ImageView
                android:id="@+id/wash123"
                android:layout_width="206dp"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:src="@drawable/wash123" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Wash with\nsufficient soap \t\t\tScrub palms\t\t\tScrub fingers\nand clean water"
                android:id="@+id/textView12a" />

            <ImageView
                android:id="@+id/wash45"
                android:layout_width="170dp"
                android:layout_height="69dp"
                android:layout_gravity="center"
                android:src="@drawable/wash45" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Scrub nail on palms\t\t\t Scrub back of hands"
                android:id="@+id/textView12x" />

            <ImageView
                android:id="@+id/wash67"
                android:layout_width="170dp"
                android:layout_height="69dp"
                android:layout_gravity="center"
                android:src="@drawable/wash67" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rinse hands with clean water\t\t\t Dry with clean towel"
                android:id="@+id/textView12z" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:text="Bathing and showering regularly"
                android:id="@+id/textView12b" />

            <ImageView
                android:id="@+id/healthy_man"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/shower" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clean_bath"
                android:id="@+id/textView13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dental hygiene"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:paddingTop="22dp"
                android:id="@+id/textView9" />

            <ImageView
                android:id="@+id/healthy_sleep"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/teeth" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clean_teeth"
                android:id="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wearing clean cloths"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:paddingTop="22dp"
                android:id="@+id/textView6" />

            <ImageView
                android:id="@+id/healthy_drink"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/cloths" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clean_cloth"
                android:id="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Click Here to find out more"
                android:id="@+id/txtClick" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>