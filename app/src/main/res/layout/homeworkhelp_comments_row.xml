<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TVComment"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="38dp"
        android:text="Text comment goes here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IVCommenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="326dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVComment"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/TVTimeCommenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Time"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/IVCommenter"
        app:layout_constraintTop_toBottomOf="@+id/TVUsernameCommenter" />

    <TextView
        android:id="@+id/TVUsernameCommenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="Username"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/IVCommenter"
        app:layout_constraintTop_toBottomOf="@+id/TVComment" />

</androidx.constraintlayout.widget.ConstraintLayout>