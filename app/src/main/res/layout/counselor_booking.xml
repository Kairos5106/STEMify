<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#FFE5EC"
    tools:context=".CounselorBooking">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/TBCounselling"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FB6B92"
        android:elevation="4dp"
        android:title="Psychiatrist" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book An Appointment"
        android:textStyle="bold"
        android:textColor="#66001B"
        android:textSize="21dp"
        android:padding="14dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/imageMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageviewDetail"
                        android:layout_width="105dp"
                        android:layout_height="125dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/female" />

                    <LinearLayout
                        android:id="@+id/textMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="sans-serif-black"
                            android:text="Dr Name"
                            android:textColor="#000"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Dr info" />

                        <TextView
                            android:id="@+id/textExp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Dr Exp" />

                        <TextView
                            android:id="@+id/textEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Dr Email" />

                     </LinearLayout>

                </LinearLayout>

                <CalendarView
                    android:id="@+id/calenderView"
                    android:layout_width="384dp"
                    android:layout_height="281dp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateLayout1"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btnTime1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFC2D2"
                        android:fontFamily="sans-serif-light"
                        android:text="8:00 A.M"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnTime2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFC2D2"
                        android:fontFamily="sans-serif-light"
                        android:text="10:00 A.M"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnTime3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFC2D2"
                        android:fontFamily="sans-serif-light"
                        android:text="12:00 P.M"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dateLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btnTime4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFC2D2"
                        android:fontFamily="sans-serif-light"
                        android:text="2:00 P.M"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnTime5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFC2D2"
                        android:fontFamily="sans-serif-light"
                        android:text="4:00 P.M"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnTime6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFC2D2"
                        android:fontFamily="sans-serif-light"
                        android:text="6:00 P.M"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                        android:backgroundTint="#D3CDCD"
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:text="CANCEL"
                        />

                    <Button
                        android:id="@+id/btnBook"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:backgroundTint="#E33D6A"
                        android:layout_height="wrap_content"
                        android:text="BOOK NOW" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>