<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Login">

    <TextView
        android:id="@+id/TVLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="254dp"
        android:fontFamily="@font/inter_bold"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVWelcomeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="203dp"
        android:fontFamily="@font/inter_light"
        android:text="Welcome Back!"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVLogin" />

    <EditText
        android:id="@+id/ETLoginEmail"
        android:layout_width="290dp"
        android:layout_height="56dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="64dp"
        android:background="#FFF1F1"
        android:ems="10"
        android:fontFamily="@font/inter_bold"
        android:hint="  Email Address"
        android:inputType="textEmailAddress"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVWelcomeBack" />

    <EditText
        android:id="@+id/ETLoginPassword"
        android:layout_width="290dp"
        android:layout_height="56dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="64dp"
        android:background="#FFF1F1"
        android:ems="10"
        android:fontFamily="@font/inter_bold"
        android:hint="  Password"
        android:inputType="textPassword"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETLoginEmail" />

    <Button
        android:id="@+id/BtnCancelLogin"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#770D46"
        android:fontFamily="sans-serif"
        android:text="CANCEL"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVForgotPassword"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/BtnLogin"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#770D46"
        android:fontFamily="sans-serif"
        android:text="LOGIN"
        android:textColor="#F4F4F4"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/BtnCancelChangePass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETLoginPassword"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/TVForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="64dp"
        android:clickable="true"
        android:text="Forgot Password?"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETLoginPassword" />

    <TextView
        android:id="@+id/TVAccSU"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="92dp"
        android:clickable="true"
        android:text="Don't have an account yet? Sign Up"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>