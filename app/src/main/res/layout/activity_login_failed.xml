<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5D0D0"
    tools:context=".LoginFailed">

    <Button
        android:id="@+id/BtnBackToSplash2"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="91dp"
        android:backgroundTint="#770D46"
        android:fontFamily="sans-serif"
        android:text="BACK TO START"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVSorry"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/TVSorry"
        android:layout_width="312dp"
        android:layout_height="197dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/inter_bold"
        android:lineSpacingExtra="8sp"
        android:text="Sorry! Your account has been locked due to too many failed login attempts. Please try again an hour later."
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>