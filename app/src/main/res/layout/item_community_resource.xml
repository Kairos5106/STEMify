<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:id="@+id/CVResourceImage"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_alignParentStart="true"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp">

    <ImageView
        android:id="@+id/IVResourceImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sampleimage"/>

</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/CVAuthorImage"
    android:layout_width="40dp"
    android:layout_height="40dp"
    app:cardCornerRadius="50dp"
    android:layout_marginStart="70dp"
    android:layout_marginTop="60dp">

    <ImageView
        android:id="@+id/IVAuthorImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pfp"/>

</androidx.cardview.widget.CardView>

<TextView
    android:id="@+id/TVResourceTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Title of Resource"
    android:textSize="30sp"
    android:textStyle="bold"
    android:layout_alignStart="@+id/CVResourceImage"
    android:layout_marginStart="90dp"
    android:layout_alignTop="@+id/CVResourceImage"
    android:layout_marginTop="-8dp"/>

<TextView
    android:id="@+id/TVResourceDesc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Description"
    android:textSize="15sp"
    android:layout_alignStart="@+id/TVResourceTitle"
    android:layout_marginStart="4dp"
    android:layout_marginTop="50dp"
    android:singleLine="true"
    android:ellipsize="end"/>

<TextView
    android:id="@+id/TVResourceAuthor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="by Author"
    android:textSize="20sp"
    android:textStyle="italic"
    android:layout_alignStart="@+id/TVResourceDesc"
    android:layout_marginTop="70dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#BDB6B6"
    android:layout_below="@+id/CVResourceImage"
    android:layout_marginTop="20dp"/>

</RelativeLayout>