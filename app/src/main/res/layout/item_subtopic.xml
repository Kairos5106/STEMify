<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/IVSubtopicImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/sampleimage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/TVSubtopicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtopic Title"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toEndOf="@+id/IVSubtopicImage"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/TVSubtopicMasteryPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Achieved Points/Total Points mastery points"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/TVSubtopicTitle"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/IVSubtopicImage"
        android:layout_marginStart="32dp"/>

    <LinearLayout
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/IVSubtopicImage"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVSubtopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/row_item_list"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>